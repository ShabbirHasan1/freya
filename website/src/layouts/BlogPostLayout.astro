---
import "@fontsource/inter";
import Layout from "./Layout.astro";
import { BlogPostTOC }  from "../components/BlogPostTOC"
const { frontmatter, headings  } = Astro.props;

const formattedDate = (new Date(frontmatter.date)).toLocaleString().split(',')[0]

---

<Layout title={frontmatter.title}>
    <main class="flex">
        <article class="w-4/5 px-8">
            <h1>{frontmatter.title}</h1>
            <i>{formattedDate} - {frontmatter.author}</i>
            <slot />
        </article>
        <BlogPostTOC headings={headings}/>
    </main>
</Layout>

<style is:global>
	.icon.icon-link::before {
		padding: 2px 10px;
        content: "#";
        color: rgb(100, 100, 100);
	}

    .icon.icon-link:hover::before {
        color: rgb(150, 150, 150);
	}


    main {
		max-width: 115ch;
	}

    pre {
        padding: 20px;
        border-radius: 8px;
    }

    main * :not(span, pre, code) {
        color: rgb(210, 210, 210);
        font-family: "Inter", system-ui, sans-serif;
        line-height: 1.7;
    }

    ul {
        list-style: circle;

        & li {
            margin-left: 24px;
        }
    }

    p {
        margin: 16px 0px;
    }

    h1 {
        font-size: 38px;
        margin: 24px 0px;
        font-weight: bold;
    }

    h2 {
        font-size: 30px;
        margin: 20px 0px;
        font-weight: bold;
    }

    h3 {
        font-size: 26px;
        margin: 18px 0px;
        font-weight: bold;
    }

    h4 {
        font-size: 22px;
        margin: 16px 0px;
        font-weight: bold;
    }

    h5 {
        font-size: 18px;
        margin: 16px 0px;
        font-weight: bold;
    }
</style>